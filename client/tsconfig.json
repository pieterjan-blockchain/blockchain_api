{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@blockstack/stacks-blockchain-api-types": ["../docs"]
    }
  },
  "include": ["./src/**/*.ts"],
  "typedocOptions": {
    "inputFiles": ["./src"],
    "mode": "file",
    "out": "../docs/.tmp/client"
  }
}
